<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Screen" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/listBackground</item>
  </style>

  <style name="Screen.List">
    <item name="android:paddingTop">@dimen/list_padding</item>
    <item name="android:paddingBottom">@dimen/list_padding</item>
    <item name="android:paddingStart">@dimen/list_padding</item>
    <item name="android:paddingEnd">@dimen/list_padding</item>
  </style>

  <style name="FeaturedQuote" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
  </style>

  <style name="FeaturedQuote.Text">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="FeaturedQuote.Source">
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">italic</item>
  </style>

  <style name="ListItemContainer" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/list_item_margin</item>
    <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    <item name="android:layout_marginStart">@dimen/list_item_margin</item>
    <item name="android:layout_marginEnd">@dimen/list_item_margin</item>
    <item name="cardCornerRadius">@dimen/list_item_corner_radius</item>
  </style>

  <style name="ListItemContainer.Child">
    <item name="android:layout_marginTop">@dimen/list_item_overlap</item>
  </style>

  <style name="ListItemLayout" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/list_item_padding</item>
    <item name="android:paddingBottom">@dimen/list_item_padding</item>
    <item name="android:paddingStart">@dimen/list_item_padding</item>
    <item name="android:paddingEnd">@dimen/list_item_padding</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="ListItemLayout.Child">
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:gravity">start|top</item>
  </style>

  <style name="ListItemText" parent="AppTheme"/>

  <style name="ListItemText.Quote" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ListItemText.Quote.Child">
    <item name="android:layout_marginStart">@dimen/list_item_child_indent</item>
  </style>

  <style name="ListItemText.Source" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ListItemText.Source.Child">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="ListItemText.Source.Parent">
    <item name="android:textStyle">bold|italic</item>
  </style>

  <style name="FloatingAction">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="useCompatPadding">true</item>
  </style>

  <style name="EditContainer" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/edit_container_padding</item>
  </style>

  <style name="EditItem" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/edit_item_margin</item>
  </style>

  <style name="EditItem.Nested">
    <item name="android:layout_margin">0dp</item>
  </style>

  <style name="EditItem.Nested.Multiline">
    <item name="android:minLines">@integer/multiline_min_lines</item>
    <item name="android:maxLines">@integer/multiline_max_lines</item>
  </style>

</resources>
